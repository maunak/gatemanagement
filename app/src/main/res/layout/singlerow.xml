<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:textStyle="bold"
            android:text="Name"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:layout_below="@+id/name"
            android:text="Entry Time"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ttime"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@+id/time"
            android:text="Time"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_marginLeft="-160dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:text="Flat/Block No."
            android:id="@+id/flatno"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/block"
            android:layout_below="@+id/ttime"
            android:layout_toRightOf="@id/flatno"
            android:text="Block"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_marginLeft="-160dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flatno"
            android:text="Vehicle No."
            android:id="@+id/vehicle"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vvehicle"
            android:layout_below="@+id/block"
            android:layout_toRightOf="@id/vehicle"
            android:text="Vehicle"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_marginLeft="-160dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vehicle"
            android:text="Phone No."
            android:id="@+id/phn"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:layout_below="@+id/vvehicle"
            android:layout_toRightOf="@id/phn"
            android:text="Phone"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_marginLeft="-160dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail"
            android:layout_below="@+id/phn"
            android:text="Detail"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>